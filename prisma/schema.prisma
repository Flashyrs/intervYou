generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id                String             @id @default(cuid())
  name              String?
  email             String?            @unique
  emailVerified     DateTime?
  image             String?
  sessions          Session[]
  accounts          Account[]
  createdAt         DateTime           @default(now())
  interviewSessions InterviewSession[] @relation("InterviewParticipants")
  submissions       Submission[]
}
model InterviewState {
        sessionId   String  @id
        language    String?
        code        String?
        problemText String?
        sampleTests String?
        driver      String?   
        problemTitle String?
        privateTests String?
        codeMap     Json?
        driverMap   Json?
        lastOutput  Json?
        createdAt   DateTime  @default(now())
        updatedAt   DateTime  @updatedAt
      }
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id            String   @id @default(cuid())
  userId        String
  sessionToken  String   @unique
  interviewerId String?
  intervieweeId String?
  createdAt     DateTime @default(now())
  expires       DateTime
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model InterviewSession {
  id                  String    @id @default(cuid())
  createdBy           String
  createdAt           DateTime  @default(now())
  problemId           String?
  participants        User[]    @relation("InterviewParticipants")
  
  // Scheduling fields
  scheduledFor        DateTime?
  isScheduled         Boolean   @default(false)
  inviteeEmail        String?
  inviteeName         String?

  // Session expiration fields
  status              String    @default("active") // "active", "expired", "scheduled", "completed"
  startedAt           DateTime?
  endedAt             DateTime?
  lastActiveAt        DateTime?
  participantJoinedAt Json?     // { userId: timestamp }
  participantLeftAt   Json?     // { userId: timestamp }
  submissions         Submission[]
  
  @@index([status])
  @@index([scheduledFor])
}
model Submission {
  id          String   @id @default(cuid())
  sessionId   String
  problemId   String
  userId      String
  language    String
  code        String
  problemText String?  // Store the problem description
  results     Json     // structured JSON object of per-case results
  passed      Boolean
  attempts    Int      @default(1)
  time        Float?   // Execution time in milliseconds
  memory      Float?   // Memory used in kilobytes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  session     InterviewSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([sessionId, problemId, userId])  // one row per user/problem/session
  @@index([sessionId, userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ExecutionLog {
      id         String   @id @default(cuid())
      sessionId  String
      userId     String
      problemId  String
      createdAt  DateTime @default(now())

      @@unique([sessionId, userId, problemId])
      @@index([sessionId, userId])
    }